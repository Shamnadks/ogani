    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    
                </div>
                
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Order Summary</h2>
                        <div class="breadcrumb__option">
                            <a href="/home">Home</a>
                            <span>Order Summary</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Checkout Section Begin -->
   
    

    <div class="container main">


        <div class="profile">
            <div class="container">


              <section class=" gradient-custom">

              <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                  <div class="col-lg-10 col-xl-12">
                    <% order.forEach(function(order) { %>
                    <div class="card" style="border-radius: 10px;">
                      <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                          <p class="lead fw-normal mb-0" style="color: #a8729a;">Order Summary</p>
                          <p class="small text-muted mb-0">Order ID : <%= order.orderId %></p>
                        </div>
                        <% order.product.forEach(function(product) { %>
                        <div class="card shadow-0 border mb-4">
                          <div class="card-body">
                            <div class="row">
                              <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Product name : <%= product.name %></p>
                              </div>
                              <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">Price : ₹<%= product.price %></p>
                              </div>
                              <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">Quantity : <%= product.quantity %>Kg</p>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% }); %>
                        <div class="d-flex justify-content-between pt-2">
                          <p class="fw-bold mb-0">Order Details</p>
                          <p class="text-muted mb-0"><span class="fw-bold me-4">Total Amount</span>₹<%= order.subtotal %></p>
                        </div>
                        
                        <div class="d-flex justify-content-between pt-2">
                          <% if (order.status === "processing") { %>
                            <h5 class="text-muted">Order status : Processing</h5>
                          <% } else if (order.status === "Shipped") { %>
                            <h5 class="text-warning">Order status : Shipped</h5>
                          <% } else if (order.status === "Out for Delivery") { %>
                            <h5 class="text-info">Out for Delivery</h5>
                          <% } else if (order.status === "Delivered") { %>
                            <h5 class="text-success">Order status : Delivered</h5>
                          <% } else if (order.status === "Cancelled") { %>
                            <h5 class="text-danger" style="color: red;">Order status : Cancelled</h5>
                          <% } else if (order.status === "Returned") { %>
                            <h5 class="text-primary">Order status : Returned</h5>
                          <% } %>
                        </div>
                        <div class="d-flex justify-content-between">
                          <p class="text-muted mb-0">Ordered date : <%= order.date.toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric'}) %> <%= order.date.toLocaleTimeString('en-US', {hour: 'numeric', minute:'numeric'}) %></p>
                        </div>
                        <div class="d-flex justify-content-between mb-5">
                          <% if (order.status === "processing" || order.status === "Shipped") { %>
                            <a href="/cancel-order?id=<%= order._id %>" class="text-danger text-decoration-none"
                              data-bs-toggle="modal" data-bs-target="#exampleModal<%= order._id %>"><strong>Cancel Order</strong></a>
                              <% } %>

                              <% if (order.status === "Delivered") { %>
                                <a href="/cancel-order?id=<%= order._id %>" class="text-danger text-decoration-none"
                                  data-bs-toggle="modal" data-bs-target="#exampleModal<%= order._id %>"><strong>Return order</strong></a>
                                  <% } %>

                                </div>
                              </div>
                    
                            </div>

                            <% if(order.status === "processing") { %>

                              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel">Cancel Order</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel">Cancel Order</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                   
                                    <div class="modal-body">
                                      <p>Are you sure to cancel order ?</p>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                      <a href="/cancel-order?id=<%= order._id %>"><button type="button" class="btn btn-danger">Cancel Order</button></a>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <a href="/download-Invoice?id=<%= order.orderId %>" class="text-success text-decoration-none"
                                ><strong>Down load Invoice</strong></a>
                            <% } %>
                            <% if(order.status === "Shipped") { %>
                              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel">Cancel Order</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      <p>Are you sure to cancel order ?</p>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                      <a href="/cancel-order?id=<%= order._id %>"><button type="button" class="btn btn-danger">Cancel Order</button></a>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              
                            <% } %>
                            
                            <% if(order.status === "Delivered") { %>
                              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel">Return Order</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      <p>Are you sure to return order ?</p>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                      <a href="/cancel-order?id=<%= order._id %>"><button type="button" class="btn btn-danger">Return Order</button></a>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% } %>
                            <%})%>
      </div>
    </div>
  </div>
</section>            
