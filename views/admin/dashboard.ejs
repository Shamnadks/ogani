<%- include('../layouts/adminheader') %>


    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>User Management</h2>
                        <div class="breadcrumb__option">
                            <a href="./index.html"></a>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <br>
    <br>
    <br>




      <main class="main">
        <div class="container">
          <div class="table-responsive" id="no-more-tables">
            <table class="table table-striped bg-white" id="myTable">
              <thead class="bg-success text-light">
                <tr>
                  <th style="font-size: 20px;" scope="col">Name</th>                  
                  <th style="font-size: 20px;" scope="col">Email</th>
                  <th style="font-size: 20px;" scope="col">Mobile</th>                  
                  <th style="font-size: 20px;" scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                    <% 

                    if(users.length> 0){
                          
                          for(let i=0;i<users.length;i++){
                              %>
                      <tr style="font-size: medium;">
                        <td data-title="Name"><%= users[i].name %></td>  
                        <td data-title="Name"><%= users[i].email %></td>  
                        <td data-title="Name"><%= users[i].mobile %></td>                        
                        <td data-title="Actions">
                            <%if(users[i].block){%>

                                <button class="btn btn-success" onclick="block('<%=users[i]._id %>')">Unblock</button>
                                <%}else{%>
                                <button class="btn btn-danger" onclick="block('<%=users[i]._id %>')">Block</button>
                                <%}%>
                        </td>
                      </tr>
                      <%
                    }
            
                }else{
                    %>
                    <tr>
                        <td colspan="5"> Users Not Found</td>
                    </tr>
                    <%
                }
                
                %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
      


  
</div>
</div>
</div>
</section>

<!-- Js Plugins -->
<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.nice-select.min.js"></script>
<script src="js/jquery-ui.min.js"></script>
<script src="js/jquery.slicknav.js"></script>
<script src="js/mixitup.min.js"></script>
<script src="js/owl.carousel.min.js"></script>
<script src="js/main.js"></script>

<script>
    function block(data){
      console.log(data,'id');
      fetch("/admin/block_user",{
        method:"POST",
        headers: {
          "Content-Type": "application/json"          
        },
        body: JSON.stringify({
          id:data
        })
      }) 
      .then(() => {
              // Reload the page after the success message is shown
              location.reload();
            })     
      .then((res)=>res.json())
            
    }
  </script>

</body>

</html>

