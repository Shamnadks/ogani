                <div class="table-responsive">
                  <table class="table table-striped table-lg" id="myTable">
                    <thead>
                        <tr>
                            <th>Order id</th>
                            <th>Products</th>
                            <th>Date</th>
    
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Order Price</th>
                            <th>Address</th>
                            <th>Action</th>
                           
                          </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      
                        <% order.forEach(function(order){%>
    
                       
                          <tr>
                            <td><%=order.orderId%></td>
                            <td> <a href="/admin/view-product?id=<%=order._id%>" class="btn-sm btn-success">View</a> </td>
                            <td><%= order.date.toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric'}) %> <%= order.date.toLocaleTimeString('en-US', {hour: 'numeric', minute:'numeric'}) %></td>
    
                            <td>
                            <% if (order.payment_method === "1") { %>
                              <p class="">Cash On Delivery</p>
                              <% } %>
    
    
                              <% if (order.payment_method === "2") { %>
                                <p class="">Online Payment</p>
                                <% } %>
    
                              </td>
                                <td><strong><%=order.status%></strong></td>
                                <td>₹<%=order.subtotal%></td>
                                <td><%=order.addressId%></td>
                                <td>
                                <% if (order.status === "processing") { %>
                                  <a  href="/admin/change-status?id=<%= order._id %>"
                                       class="btn-sm btn-warning"
                                       onclick="return confirm('Are you sure?')" >Ship Order</a>
                                  <% } %>
    
                                  <% if (order.status === "Shipped") { %>
                                    <a href="/admin/change-status?id=<%= order._id %>"
                                         class="btn-sm btn-warning"
                                         onclick="return confirm('Are you sure?')">Out of delivery</a>
                                    <% } %>
    
                                    <% if (order.status === "Out for Delivery") { %>
                                      <a  href="/admin/change-status?id=<%= order._id %>"
                                           class="btn-sm btn-success"
                                           onclick="return confirm('Are you sure?')">Delivered</a>
                                      <% } %>
                                    </td>
                                   
                          </tr>
                        <%})%>
                        </tbody>
                  </table>
